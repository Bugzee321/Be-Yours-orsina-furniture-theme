<script>
// ============ ENHANCED CART DRAWER JAVASCRIPT START ============
// Cart Drawer State
let cartDrawerOpen = false;
let cartData = null;
let lastAddedProductHandle = null;

// Global function to trigger cart drawer opening from anywhere
window.triggerCartDrawerOpen = function() {
  openCartDrawer();
};

// Show feedback message
function showCartAddedFeedback(message = 'Product added to cart!') {
  const feedback = document.getElementById('cart-added-feedback');
  if (feedback) {
    feedback.textContent = message;
    feedback.classList.add('show');
    
